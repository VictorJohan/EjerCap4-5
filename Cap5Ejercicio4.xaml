<Window x:Class="EjerCap4_5.Cap5Ejercicio4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjerCap4_5"
        mc:Ignorable="d"
         Title="Ejercicio 4" Height="190" Width="403" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10,10,10,10">
            <Label Content="En esta ventana podras calcular el factorial de un numero." FontSize="14"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Numero"/>
                <TextBox Name="numTextBox" Width="40" Height="20"/>
                <Button Name="calcularButton" Content="Calcular" Width="60" Height="20" Margin="5,0" Click="calcularButton_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Factorial"/>
                <TextBlock Name="factorialTextBlock"  Height="20" Background="LightGray"/>
            </StackPanel>

            <Button Name="atrasButton" Content="Atras" Width="60" Height="20" HorizontalAlignment="Left" Margin="5,19,0,0" Click="atrasButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
