<Window x:Class="EjerCap4_5.Ejercicio1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjerCap4_5"
        mc:Ignorable="d"
        Title="Ejercicio 1" Height="350" Width="582" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10,10,10,10">
            <Label Content="En esta ventana podra ver la tabla de multiplicacion del 1 al 10 del numero que deigite." FontSize="14"/>

            <StackPanel Orientation="Horizontal">
                <TextBox Name="NumTextBox" Text="0" Width="80" Height="25" Margin="5,0" HorizontalContentAlignment="Left" Padding="3"/>
                <Button Name="calcularButton" Content="Calcular" Margin="5,0" Click="calcularButton_Click"/>
            </StackPanel>

            <TextBlock Name="cajaResTextBlock" Width="81" Height="180" Margin="5,10" HorizontalAlignment="Left" Background="LightGray">
                <Label Name="resulLabel"/>
            </TextBlock>

            <Button Name="AtrasButton" Content="Atras" Width="60" Height="20" HorizontalAlignment="Left" Margin="5,0" Click="AtrasButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
